{
  "name": "kleinweb/kleinweb-headless-theme",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/kleinweb/logan-center",
  "authors": [
    {
      "name": "Funkhaus",
      "homepage": "https://funkhaus.us"
    },
    {
      "name": "Klein College of Media and Communication",
      "email": "kleinweb@temple.edu",
      "homepage": "https://klein.temple.edu"
    }
  ],
  "keywords": [
    "wordpress",
    "wordpress-plugin",
    "headless-wordpress",
    "temple-university"
  ],
  "require": {
    "php": "^8.0",
    "johnbillion/args": "^1.6",
    "johnbillion/extended-cpts": "^5.0",
    "vinkla/extended-acf": "^13.2"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "laravel/pint": "^1.5",
    "squizlabs/php_codesniffer": "3.7.2",
    "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "^0.8.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": [
      "phpcs --extensions=php --standard=./phpcs.xml src"
    ],
    "fix": [
      "pint src"
    ]
  }
}
